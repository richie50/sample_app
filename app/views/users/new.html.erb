<% provide(:title, 'Sign Up') %>
    <h2 style="font-family: Comic Sans MS ; color: black;letter-spacing: 3pt;"> Sign Up</h2>
   
    <div class="row">
      <div class="span6 offset3" id="div_signup" >
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          
          <%= f.label :name %>
          <%= f.text_field :name %>
          
          <%= f.label :email %>
          <%= f.text_field :email %>
          
          <%= f.label :password %>
          <%= f.password_field :password %>
          
            <%= f.label :password_confirmation, "Confirm your password"  %>
            <%= f.password_field :password_confirmation %>
          <center>
           <%= f.submit "Create an account", class: "btn btn-large btn-primary" %>
          </center>
      <% end %>
      </div>
    </div>  
      